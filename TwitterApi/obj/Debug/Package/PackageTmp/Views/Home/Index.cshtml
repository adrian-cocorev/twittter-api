@{
    ViewBag.Title = "Home Page";
}
@model List<TwitterApi.Models.TweetInfo>
<script src="~/Scripts/app.js" type="text/javascript"></script>


<div class="jumbotron">
    <h1>Sentiment Analisys in Tweets</h1>
</div>
<div class="container">
    <div class="row">
        <form id="sentimentTwitter" method="get">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="row col-md-12">
                        <label>Insert item for twitter search </label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="queryTwitterTerm" style="max-width: 80% !important; display: -webkit-inline-box !important;">
                            <input type="text" class="form-control" id="queryNumberOfTweets" style="max-width: 15% !important; display: -webkit-inline-box !important;" placeholder="nr of tweets" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-success" id="btnSearchTwitter" onclick="MakeSearch();">Search tweets and classify</button>
                </div>
                <br/>
                @*show data*@
                <div class="col-md-12" style="margin-top: 10px; float: left">
                    <h2>Results</h2>
                    <ul id="tweetsAndSentiments"></ul>
                </div>
            </div>
        </form>
    </div>
</div>

@*section Waiting*@
<div id="sectionWaiting" class="section-loading">
    <label class="label-success" style="margin-left: 21px;">Loading.</label>
    <div class="loaderModal">
        <img src="/fonts/loader.gif" />
    </div>
</div>