@{
    ViewBag.Title = "Home Page";
}
@model List<TwitterApi.Models.TweetInfo>

<div class="jumbotron">
    <h1>Twitter Sentiments</h1>    
</div>

<div class="container">
    <div class="row">
        @using (Html.BeginForm("Index", "Home", new { id = "search-tweets" }, FormMethod.Post, new { @class = "header-search pull-right" }))
        {
            @Html.AntiForgeryToken()
            <input type="text" placeholder="Number of tweets" id="search-tweets-number" name="tweetsNumber">
            <input type="text" placeholder="Search" id="search-tweets" name="searchTerm">
            <button type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        }
    </div>

    @for (var i = 0; i < Model.Count(); i++)
    {
        <div class="row">
            <div class="col-md-4">
                @Model[i].UserName
            </div>
            <div class="col-md-8">
                @Model[i].Text
            </div>
        </div>
    }
</div>